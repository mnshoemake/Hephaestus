@model Hephaestus.Models.Hero

@{
    ViewData["Title"] = "Create Hero";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    var bwidth=0
    $("button.btnGroup").each(function(i,v){
        if($(v).width()>bwidth) bwidth=$(v).width();
    });
    $("button.btnGroup").width(bwidth);
</script>
<h2>View</h2>

<h4>Create Hero</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-inline">
                <div class="form-group">
                    <label asp-for="Epithet" class="control-label"></label>
                    <input asp-for="Epithet" class="form-control" required />
                    <span asp-validation-for="Epithet" class="text-danger"></span>
                </div>
            </div>
            <div class="form-inline">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-inline">
                <div class="form-group">
                    <label asp-for="Lineage" class="control-label"></label>
                    <input asp-for="Lineage" class="form-control" />
                    <span asp-validation-for="Lineage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pronouns" class="control-label"></label>
                    <input asp-for="Pronouns" class="form-control" />
                    <span asp-validation-for="Pronouns" class="text-danger"></span>
                </div>
            </div>
            <div class="form-inline">
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsDemigod" /> @Html.DisplayNameFor(model => model.IsDemigod)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-inline">
                <div class="form-group">
                    <label asp-for="God" class="control-label">Honored God</label>
                    <input asp-for="God" class="form-control" />
                    <span asp-validation-for="God" class="text-danger"></span>
                </div>
            </div>

            <div class="form-inline">
                <div class="form-group">
                    <label asp-for="Strength" class="control-label"></label>
                    <input asp-for="Strength" class="form-control" />
                    <span asp-validation-for="God" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="FavorScore1" class="control-label"></label>
                <input asp-for="FavorScore1" class="form-control" />
                <span asp-validation-for="FavorScore1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FavorScore2" class="control-label"></label>
                <input asp-for="FavorScore2" class="form-control" />
                <span asp-validation-for="FavorScore2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
        <row>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" required />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </row>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label asp-for="ArtsAndOrationDie" class="control-label"></label>
            <input asp-for="ArtsAndOrationDie" class="form-control" />
            <span asp-validation-for="ArtsAndOrationDie" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BloodAndValorDie" class="control-label"></label>
            <input asp-for="BloodAndValorDie" class="form-control" />
            <span asp-validation-for="BloodAndValorDie" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CraftAndReasonDie" class="control-label"></label>
            <input asp-for="CraftAndReasonDie" class="form-control" />
            <span asp-validation-for="CraftAndReasonDie" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ResolveAndSpiritDie" class="control-label"></label>
            <input asp-for="ResolveAndSpiritDie" class="form-control" />
            <span asp-validation-for="ResolveAndSpiritDie" class="text-danger"></span>
        </div>
    </div>

</div>

